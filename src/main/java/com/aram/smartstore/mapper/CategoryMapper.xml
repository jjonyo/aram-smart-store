<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aram.smartstore.mapper.CategoryMapper">
  
  <select id="findById" resultType="CategoryEntity">
    SELECT *
    FROM category
    WHERE id = #{id}
  </select>

  <select id="findChildCategoriesById" resultType="CategoryEntity">
    SELECT *
    FROM category
    WHERE parent_id = #{id}
      AND use_yn = 'Y'
  </select>

</mapper>
